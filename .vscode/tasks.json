{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "gcc",
			"args": [
				"-g", // for adding debug symbols
				"../Philosophers/*.c", // Compile all .c files in the Philosophers directory
				"../Philosophers/utils/*.c",
				"-o",
				"../Philosophers/a.out" // Output binary (or use a.out.exe for Windows)
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}
