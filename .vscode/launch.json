{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug with GDB",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/a.out", // Path to your compiled program
          "args": ["5", "800", "200", "200", "7"], // Command line arguments (optional)
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "miDebuggerPath": "/usr/bin/gdb", // Adjust if necessary
          "preLaunchTask": "build",
          "logging": {
              "trace": true,  // Enable this for detailed logs
              "traceResponse": true
          },
          "stopAtConnect": true, // Enable this for multithreaded debugging
          "threadingModel": "native", // Set threading model for debugging threads
          "launchCompleteCommand": "exec-run"
      }
  ]
}
